<Window x:Class="ActivityStatWpfClient.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ActivityStatWpfClient"
        mc:Ignorable="d"
        Title="LoginWindow" Height="300" Width="800">
    <Grid>
        <StackPanel>
            <Label Background="LightGoldenrodYellow" Padding="10">Email</Label>
            <TextBox x:Name="tb_Email" Padding="10"/>
            <Label Background="LightGoldenrodYellow" Padding="10">Password</Label>
            <PasswordBox x:Name="tb_password" Padding="10"/>
            <Button Content="Login" Padding="10" Margin="10" Click="Button_Click" />
            <!--<Image Source="SocialLoginWindows/Buttons/facebook.png" Height="50" Margin="10" MouseLeftButtonDown="LoginWithFb" />-->
        </StackPanel>
    </Grid>
</Window>
